{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run API (uvicorn --reload)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"],
      "env": { "PYTHONUNBUFFERED": "1" },
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
